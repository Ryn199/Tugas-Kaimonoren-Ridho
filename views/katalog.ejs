<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Katalog Produk</title>
    <!-- Custom CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            padding-top: 20px;
            max-width: 445px; 
            margin: 0 auto; 
        }
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: left;
            gap: 20px;
            max-width: 100%; 
        }
        .product-card {
            max-width: 210px;
            min-width: 210px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: rgb(27, 113, 170); 
            color: #ffffff;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            display: flex;
            flex-direction: column;
            height: auto;
        }
        .product-card:hover {
            transform: translateY(-7px);
            opacity: 90%;
        }
        .product-image {
            object-fit: cover;
            width: 100%;
            height: 200px;
        }
        .product-info {
            margin-top: -30px;
            padding: 10px;
            flex-grow: 1;
        }
        .product-title {
            margin-bottom: -10px;
            font-size: 16px;
            line-height: 1.2;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            text-overflow: ellipsis;
        }
        .product-price {
            margin-bottom: 5px;
            font-size: 14px;
            color: #ffffff;
        }
        .product-rating {
            text-align: center;
        }
        .rating-text {
            display: inline-block;
            margin-right: 5px;
        }

        .star-rating {
            display: inline-block;
        }

        .material-icons {
            vertical-align: middle;
        }

        .sticky-back {
            position: sticky;
            top: 0;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <!-- Gunakan kelas "sticky-back" pada tombol back -->
    <div style="text-align: left; margin-bottom: 30px;" class="sticky-back">
        <a href="/"><img src="https://i2.wp.com/matuloo.com/wp-content/uploads/2017/02/backbutton.png?fit=800%2C400" alt="" width="80px"></a>
    </div>
    <h2 style="text-align: center;">KAIMONOREN EXPRESS-JS</h2>
    <div class="container">
        <% kaimonoren.forEach((product, index) => { %>
            <div class="product-card" onclick="window.location.href='/kaimonoren/detail_produk/<%= product._id %>';">
                            <img src="<%= product.foto %>" class="product-image" alt="<%= product.nama %>">
                <div class="product-info">
                    <h5 class="product-title"><%= product.nama %></h5>
                    <p class="product-price">Rp.<%= product.harga %></p>
                    <p class="product-price" style="font-size: 10px;"><%= product.terjual %> Terjual</p>
                    <!-- Rating -->
                    <div class="star-rating product-rating">
                        <p class="rating-text" style="font-size: 10px;">Rating: </p>
                        <% for (let i = 1; i <= 5; i++) { %>
                            <% if (i <= product.rating) { %>
                                <span class="material-icons checked">star</span>
                            <% } else { %>
                                <span class="material-icons">star_border</span>
                            <% } %>
                        <% } %>
                    </div>
                    
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
